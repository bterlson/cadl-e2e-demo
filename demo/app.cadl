import "@cadl-lang/rest";


using Cadl.Http;

@serviceTitle("Demo")
namespace DemoApp;

model Comment {
  @key
  @visibility("read")
  id: string;

  contents: string;

  @visibility("read")
  sentiment: string;
}

@withVisibility("write")
model CommentRequest {
  ... Comment
};


@route("/comments")
interface Comments {
  @get op getComment(@path id: string): OkResponse<Comment>;
  @get op listComments(): OkResponse<Comment[]>;
}

