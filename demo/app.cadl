import "@cadl-lang/rest";
import "cadl-data-store";
import "cadl-azure-static-web-app";

namespace DemoApp {
  namespace API {
    @store("dbName")
    model Comment {
      @key id: string;
      contents: string;
      sentiment: string;
    }

    @Http.post op createComment(@Http.body comment: Comment): Comment;
    @Http.get op getComment(@Http.path id: string): Comment;
  }

  @AzureStaticWebApp
  namespace Static { }
}


